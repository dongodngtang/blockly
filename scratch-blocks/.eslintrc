{
    "rules": {
        "curly": ["error", "multi-line"],
        "eol-last": ["error"],
        "indent": [
            "error", 2,
            {
                "SwitchCase": 1,
                "MemberExpression": 2,
                "ObjectExpression": 1,
                "FunctionDeclaration": {
                    "body": 1,
                    "parameters": 2
                },
                "FunctionExpression": {
                    "body": 1,
                    "parameters": 2
                },
                "CallExpression": {
                    "arguments": 2
                },
                "ignoredNodes": ["ConditionalExpression"]
            }
        ],
        "linebreak-style": ["error", "unix"],
        "max-len": ["error", 150, 4],
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "no-unused-vars": [
            "error",
            {
                "args": "after-used",
                "varsIgnorePattern": "^_",
                "argsIgnorePattern": "^_"
            }
        ],
        "no-use-before-define": ["error"],
        "quotes": ["off"], 
        "semi": ["error", "always"],
        "space-before-function-paren": ["off"], 
        "space-infix-ops": ["error"],
        "strict": ["off"],
        "no-cond-assign": ["off"], 
        "no-redeclare": ["off"], 
        "valid-jsdoc": ["error", {"requireReturn": false}],
        "no-console": ["off"],
        "no-constant-condition": ["off"]
    },
    "env": {
        "browser": true
    },
    "globals": {
        "Blockly": true, 
        "goog": true
    },
    "extends": "eslint:recommended"
}
